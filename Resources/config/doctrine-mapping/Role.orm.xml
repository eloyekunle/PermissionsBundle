<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Eloyekunle\PermissionsBundle\Model\Role" table="roles">
        <id name="id" column="role_id" type="integer">
            <generator strategy="IDENTITY" />
            <sequence-generator sequence-name="subportal.roles_role_id_seq" allocation-size="1" initial-value="1" />
        </id>

        <field name="name" column="rolename" type="string" length="50" nullable="true" unique="true"/>

        <field name="permissions" column="permissions" type="array" nullable="true"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
        </lifecycle-callbacks>
    </mapped-superclass>

</doctrine-mapping>
