<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Eloyekunle\PermissionsBundle\Model\Role">

        <field name="name" column="rolename" type="string" length="50" nullable="true" unique="true"/>

        <field name="permissions" column="permissions" type="array" nullable="true"/>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
        </lifecycle-callbacks>

    </mapped-superclass>

</doctrine-mapping>
